<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_statusbar" />

    <RelativeLayout
        android:id="@+id/rv_desire_number"
        style="@style/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_desire_number_title"
            style="@style/view_in_card_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/add_desire_number_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_desire_price_edit"
            style="@style/view_in_card_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:hint="@string/please_input_ptice"
            android:textSize="30sp" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_white"
        android:layout_height="@dimen/desire_editview_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edtTxt_desire"
            android:layout_width="match_parent"
            android:textSize="@dimen/middle_text_size"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_white"
            android:gravity="left|top" />

        <LinearLayout
            android:background="@color/bg_white"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/tv_desire_date"
                android:layout_marginStart="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_desire_status"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_heart_gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
