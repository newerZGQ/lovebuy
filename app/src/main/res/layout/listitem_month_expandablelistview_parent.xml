<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/day_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical|left"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/day_earning_title"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:gravity="left|bottom"
                android:textColor="@color/parent_list_title_color"
                android:layout_height="match_parent"
                android:text="收入" />

            <TextView
                android:id="@+id/tv_day_earning_number"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:gravity="left|bottom"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/day_consum_title"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/parent_list_title_color"
                android:gravity="left|bottom"
                android:layout_height="match_parent"
                android:text="支出" />

            <TextView
                android:id="@+id/tv_day_consum_number"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:gravity="left|bottom"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>