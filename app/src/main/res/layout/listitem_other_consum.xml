<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:background="@color/red_identity"
        android:layout_width="5dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/consum_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:alpha="0.6"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/date_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_consum_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:alpha="0.6"
                android:textColor="@color/dialog_titles_color"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/consum_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:alpha="0.6"
                android:textColor="@color/dialog_titles_color"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_consum_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:alpha="0.6"
                android:gravity="center_vertical|left"
                android:textColor="@android:color/primary_text_light"
                android:textSize="@dimen/middle_text_size"
                android:textStyle="bold" />

            <com.example.zgq.lovebuy.ui.myUI.MyRatingBar
                android:id="@+id/other_consum_item_ratingbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                hedgehog:clickable="false"
                hedgehog:starCount="5"
                hedgehog:starEmpty="@drawable/ic_star_empty"
                hedgehog:starFill="@drawable/ic_star_fill"
                hedgehog:starImageSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/consum_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:alpha="0.6"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/middle_text_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>