<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:layout_centerHorizontal="true"
    android:layout_height="60dp">
    <LinearLayout
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
        <TextView
            android:layout_width="80dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="今日支出"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/day_part_unfocused_Text_color"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_day_consum_number"
            android:layout_width="80dp"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:text="0"
            android:gravity="top|center_horizontal"
            android:textColor="@color/day_part_focused_Text_color"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_day_number_chinese"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColor="@color/day_part_date_text_color"
        android:layout_height="match_parent" />
    <LinearLayout
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
        <TextView
            android:layout_width="80dp"
            android:textSize="12sp"
            android:text="今日收入"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/day_part_unfocused_Text_color"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_day_earning_number"
            android:layout_width="80dp"
            android:textSize="18sp"
            android:gravity="top|center_horizontal"
            android:text="0"
            android:textColor="@color/day_part_focused_Text_color"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>